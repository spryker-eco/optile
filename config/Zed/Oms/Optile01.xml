<?xml version="1.0"?>
<statemachine
    xmlns="spryker:oms-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:oms-01 http://static.spryker.com/oms-01.xsd">

    <process name="Optile01" main="true">
        <states>
            <state name="new"/>
            <state name="charged"/>
            <state name="shipped"/>
            <state name="canceled"/>
            <state name="closed"/>
            <state name="refunded"/>
            <state name="refund request sent"/>
            <state name="close request sent"/>
            <state name="cancel request sent"/>
            <state name="charge request sent"/>
            <state name="reserved" reserved="true"/>
        </states>

        <transitions>
            <transition happy="true" condition="Optile/TrueCondition">
                <source>new</source>
                <target>reserved</target>
            </transition>

            <transition happy="true" condition="Optile/IsCharged">
                <source>reserved</source>
                <target>charged</target>
            </transition>

            <transition>
                <source>charged</source>
                <target>cancel request sent</target>
                <event>send cancel request</event>
            </transition>

            <transition happy="true" condition="Optile/IsCanceled">
                <source>cancel request sent</source>
                <target>canceled</target>
            </transition>

            <transition>
                <source>charged</source>
                <target>shipped</target>
                <event>ship</event>
            </transition>

            <transition>
                <source>shipped</source>
                <target>close request sent</target>
                <event>send close request</event>
            </transition>

            <transition happy="true" condition="Optile/IsClosed">
                <source>close request sent</source>
                <target>closed</target>
            </transition>

            <transition>
                <source>closed</source>
                <target>refund request sent</target>
                <event>send refund request</event>
            </transition>

            <transition happy="true" condition="Optile/IsRefunded">
                <source>refund request sent</source>
                <target>refunded</target>
            </transition>
        </transitions>

        <events>
            <event name="send cancel request" manual="true" command="Optile/PaymentCancel"/>
            <event name="ship" manual="true"/>
            <event name="send close request" manual="true" command="Optile/PaymentClose"/>
            <event name="send refund request" manual="true" command="Optile/PaymentRefund"/>
        </events>
    </process>
</statemachine>
