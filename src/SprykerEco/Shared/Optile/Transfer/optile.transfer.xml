<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="OptileNotificationResponse">
        <property name="isSuccess" type="bool"/>
        <property name="isError" type="bool"/>
        <property name="idSalesOrder" type="int"/>
        <property name="error" type="OptileResponseError"/>
    </transfer>

    <transfer name="OptileListResponse">
        <property name="isSuccess" type="bool"/>
        <property name="isError" type="bool"/>
        <property name="idSalesOrder" type="int"/>
        <property name="error" type="OptileResponseError"/>
        <property name="idPaymentReference" type="string"/>
    </transfer>

    <transfer name="OptileResponseError">
        <property name="code" type="string"/>
        <property name="internalMessage" type="string"/>
        <property name="customerMessage" type="string"/>
    </transfer>

</transfers>
